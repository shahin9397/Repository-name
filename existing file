<body>

    <div class="background-image"></div>
    <div class="overlay"></div>

    <div class="info-box">
        <div class="live-tag">LIVE</div>
        <h1 class="para-title" id="displayPara">পারা লোড হচ্ছে...</h1>
    </div>

    <audio id="quranAudio" autoplay loop></audio>

    <script>
        const params = new URLSearchParams(window.location.search);
        let paraNumber = params.get('para') || "1";

        const audio = document.getElementById('quranAudio');
        const displayPara = document.getElementById('displayPara');

        // অডিও সোর্স (পুরো ১ ঘণ্টা তিলাওয়াত)
        const formattedPara = paraNumber.padStart(3, '0');
        audio.src = `https://server8.mp3quran.net/afs/${formattedPara}.mp3`;
        
        displayPara.innerText = "পারা " + paraNumber;

        // অটো প্লে করার চেষ্টা
        window.onclick = () => audio.play(); 
        audio.play().catch(() => {
            console.log("লাইভ শুরু করতে স্ক্রিনে একবার টাচ করুন।");
        });
    </script>
